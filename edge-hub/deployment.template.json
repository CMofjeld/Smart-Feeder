{
  "$schema-template": "4.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "smartfeedercregistry": {
                "username": "$CONTAINER_REGISTRY_USERNAME_smartfeedercregistry",
                "password": "$CONTAINER_REGISTRY_PASSWORD_smartfeedercregistry",
                "address": "smartfeedercregistry.azurecr.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.2",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.2",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "NVIDIADeepStreamSDK": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "docker.io/carlanders/bird-deepstream",
              "createOptions": {
                "Entrypoint": [
                  "/opt/nvidia/deepstream/deepstream-5.1/bin/deepstream-test5-app",
                  "-c",
                  "bird-detector-config.txt",
                  "-t"
                ],
                "HostConfig": {
                  "runtime": "nvidia",
                  "Binds": [
                    "/home/carl/bird-deepstream-app/:/app"
                  ]
                },
                "WorkingDir": "/app"
              }
            }
          },
          "ObjectDetectionAnalyzer": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.ObjectDetectionAnalyzer}",
              "createOptions": {}
            }
          },
          "avaedge": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/media/video-analyzer:1",
              "createOptions": {
                "HostConfig": {
                  "LogConfig": {
                    "Type": "",
                    "Config": {
                      "max-size": "10m",
                      "max-file": "10"
                    }
                  },
                  "Binds": [
                    "$VIDEO_OUTPUT_FOLDER_ON_DEVICE:/var/media/",
                    "$APPDATA_FOLDER_ON_DEVICE:/var/lib/videoanalyzer"
                  ],
                  "IpcMode": "host",
                  "ShmSize": 1536870912
                }
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "routes": {
          "allDownstreamToHub": "FROM /messages/* WHERE NOT IS_DEFINED ($connectionModuleId) INTO $upstream",
          "AnalyzerToIoTHub": "FROM /messages/modules/ObjectDetectionAnalyzer/* INTO $upstream",
          "DeepstreamToAnalyzer": "FROM /messages/modules/NVIDIADeepStreamSDK/* INTO BrokeredEndpoint(\"/modules/ObjectDetectionAnalyzer/inputs/detection_messages\")",
          "AVAToHub": "FROM /messages/modules/avaedge/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    },
    "avaedge": {
      "properties.desired": {
        "applicationDataDirectory": "/var/lib/videoanalyzer",
        "ProvisioningToken": "$AVA_PROVISIONING_TOKEN",
        "diagnosticsEventsOutputName": "diagnostics",
        "operationalEventsOutputName": "operational",
        "logLevel": "information",
        "logCategories": "application, events",
        "debugLogsDirectory": "/tmp/logs",
        "allowUnsecuredEndpoints": true,
        "telemetryOptOut": false
      }
    }
  }
}